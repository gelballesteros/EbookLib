<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <fragment class="geodapps.com.ebooklib.ebooklist.EbookListFragment"
        android:id="@+id/list_frag"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        tools:layout="@layout/fragment_ebook_list" />

    <fragment class="geodapps.com.ebooklib.ebookdetail.EbookDetailFragment"
        android:id="@+id/detail_frag"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        tools:layout="@layout/fragment_ebook_detail"
        android:visibility="gone"/>

</LinearLayout>